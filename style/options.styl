#options
  background-color #222

  .label
    font-size 16px
    background-color #ddd
    box-shadow 0 0 5px 2px rgba(0, 0, 0, 0.8)
    color #222
    font-weight bold
    letter-spacing 0.15em

#page1
  #template
    .__select-img
      .__item
        .__label
          font-size 15px
          color rgba(255, 255, 255, 0.5)
          transition 0.1s all

        &:hover
          background-color rgba(255, 255, 255, 0.1)
          transition 0.1s all

        &.active
          background-color rgba(255, 255, 255, 0.2)
          transition 0.1s all


  #template-options
    ul
      list-style none

#page2
  ul
    list-style none

  .month
    .label
      background-color rgba(255, 255, 255, 0.2)
      border none
      letter-spacing 0.1em
      box-shadow 0 0 0 0
      .label-month
        font-size 16px
        color rgba(255, 255, 255, 0.6)
      .label-year
        font-size 12px
        color rgba(255, 255, 255, 0.3)
    .wrap
      .item
        border 1px #222 solid

        &:hover
          background-color rgba(255, 255, 255, 0.1)
          transition 0.1s all

        &.active
          background-color rgba(255, 255, 255, 0.2)
          transition 0.1s all

#buttons
  box-shadow 0 0 5px 2px rgba(0, 0, 0, 0.8)
  background-color #ddd
