.button
  background-color rgba(0, 0, 0, 0.2)
  padding 13px 40px 12px
  color rgba(0, 0, 0, 0.5)
  font-size 14px
  cursor pointer
  transition 0.5s all
  letter-spacing 0.15em
  font-weight bold

  &:hover
    background-color rgba(0, 0, 0, 0.3)
    transition 0.5s all

  &:active
    opacity 0.7
    transition 0.5s all
