*
  box-sizing border-box

html
body
  margin 0
  padding 0
  height 100%
  width 100%

#main
  height 100%
  width 100%
  display flex
  flex-direction row
  align-items stretch
  > div
    width 50%

#preview
  display flex
  flex-direction column
  padding 40px

  #view
    flex-grow 1

  #steps
    height 200px

#options
  height 100%
  overflow-y scroll

  .label
    padding 20px 30px 14px
    margin-bottom 20px

#buttons
  display flex
  flex-direction row
  justify-content space-between
  margin-top 50px
  padding 20px 40px

#page1
  #template-options
    ul
      margin 0
      padding 0

#page2
  ul
    list-style none
    margin 0
    padding 0

  .month
    .wrap
      display flex
      flex-wrap wrap
      padding 10px 10px

      .item
        padding 10px

        img
          display block

#page3

  .field
    padding 0 40px 20px

  .description
    .textfield
      height 200px
